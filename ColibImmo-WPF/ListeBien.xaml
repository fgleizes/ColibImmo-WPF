<Page x:Class="ColibImmo_WPF.ListeBien"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ColibImmo_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListeBien">
	<Grid>
		
		<TabControl Name ="selectTypeProjetGrid">
			<TabControl.ItemTemplate>
				<DataTemplate>
							<TextBlock MouseLeftButtonDown="textbox1_MouseLeftButtonDown" Text ="{Binding Name}"/>
				</DataTemplate>
			</TabControl.ItemTemplate>
		</TabControl>
		<ListView Name="testListeBien" Height="233">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Reference" Width="120" DisplayMemberBinding="{Binding Reference}" />
					<GridViewColumn Header="Description" Width="50" DisplayMemberBinding="{Binding Description}" />
					<GridViewColumn Header="Id" Width="50" DisplayMemberBinding="{Binding Id}" />

				</GridView>
			</ListView.View>
		</ListView>
	</Grid>
</Page>
