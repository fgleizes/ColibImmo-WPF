<Page x:Class="ColibImmo_WPF.ListeBien"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ColibImmo_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListeBien">

    <!--<DataGrid VerticalAlignment="Center" Name="listTypeProjetGrid" Width="200"/>-->

    <StackPanel VerticalAlignment="Center" Width="780">
        <ComboBox Name="listTypeProjetGrid" SelectionChanged="filterTypeProject" SelectedValuePath="Id">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <ComboBoxItem>
                            <TextBlock Text="{Binding Name}"/>
                        </ComboBoxItem>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <DataGrid  Name="listOneProjetGrid"/>
    </StackPanel>
    
</Page>
